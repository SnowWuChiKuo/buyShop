<header>
  <nav class="navbar navbar-expand-lg fixed-top px-4"
    style="background-color: blanchedalmond; margin: 10px; padding: 10px; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7); weight:100px;">
    <div class="container-fluid">
      <a class="navbar-brand" style="font-size: 30px; text-decoration: none; color: black;" href="/">Buy</a>
      {{#if user}}
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ms-auto mb-2 mb-md-0">
          {{#if user.isAdmin}}
          <li class="nav-item">
            <a href="/admin" class="nav-link">Admin 後台</a>
          </li>
          {{/if}}
          <li class="nav-item d-inline-flex align-items-center">
            <span class="nav-link" style="color: black;">Hi, {{ user.email }}</span>
          </li>
          <li>
            <a href="/users/{{user.id}}" class="nav-link">Profile</a>
          </li>
          <li class="nav-item">
            <a href="/logout"><button class="btn btn-outline-success my-sm-0 my-2">Logout</button></a>
          </li>
        </ul>
      </div>
      {{else}}
      <div>
        <a href="/signin"><button class="btn btn-outline-success my-sm-0 my-2">signIn</button></a>
      </div>
      {{/if}}
    </div>
  </nav>
</header>